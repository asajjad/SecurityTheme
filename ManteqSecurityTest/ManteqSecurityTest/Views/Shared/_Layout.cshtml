<!DOCTYPE html>
<html ng-app="ManteqSecurityApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Manteq</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/metro.css" rel="stylesheet" />
    <link href="~/Content/metro-icons.css" rel="stylesheet" />
    <link href="~/Content/manteq.css" rel="stylesheet" />
    <link href="~/Content/manteq-utility.css" rel="stylesheet" />
</head>
<body>


    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/home/index" class="navbar-brand"><img src=@Url.Content("~/images/manteq-logo.png") /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container-fluid body-content fill">
        <div class="body-content-default-height">
            @RenderBody()
        </div>
        <hr />
        <footer class="footer">
            <p class="text-muted padding-top-5">&copy; @DateTime.Now.Year - Manteq</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
